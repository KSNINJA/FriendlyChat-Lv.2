    tools:context="com.example.kartiksinghal.friendlychat.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/chat_preview_item"
